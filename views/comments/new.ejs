<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add New Comment to <%= article.title %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/articles/<%=article._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea rows ="4" class="form-control" type="text" name="comment[text]" placeholder="Enter your comment">
                        </textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a class="btn btn-primary firebrick-bg" href="/articles/">Go Back</a>
        </div>
    </div>

<% include ../partials/footer %>