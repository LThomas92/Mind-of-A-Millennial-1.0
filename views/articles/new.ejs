<% include ../partials/header %>
    <div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a New Article</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/articles" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">Article Title:</label>
                    <input class="form-control" type="text" name="article[title]" placeholder="Enter Article Title">
                </div>
                <div class="form-group">
                    <label for="image">Upload Main Image:</label>
                    <input class="form-control" type="file" id="image" name="image" accept="image/*" required="required">
                </div>
                <div class="form-group">
                    <label for="imgSource">Main Image Source:</label>
                  <input class="form-control" type="text" name="article[imgSource]" required="required" placeholder="Enter Image Source">
                </div>
                <div class="form-group">
                     <label for="content">Content Field:</label>
                      <textarea name="article[content]" rows="20" class="form-control content-field"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a class="btn btn-primary" href="/articles">Go Back</a>
            </div>
        </div>
    </div>
<% include ../partials/footer %>

