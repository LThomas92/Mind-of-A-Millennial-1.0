<% include ./partials/header %>

<div class ="container">
<div class="row">
	<div class="col-md-12">
		<form action="/forgot" method="POST">
			<legend class="forgot-password text-center">Forgot Password</legend>
			<div class="form-group">
				<label for="email">Email</label>
				<input type="email" name="email" placeholder="Enter your email address" required="required" autofocus class="form-control input-sm">
			</div>
			<div class="form-group">
				<input type="submit" class="btn btn-primary center-block" value="Reset Password">
			</div>
		</form>

	</div>
</div>
</div>


